<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_grey"
    tools:context=".University_detail_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/university_image"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            android:src="@drawable/university_sample" />

        <TextView
            android:id="@+id/university_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rectangle_round_boarder"
            android:backgroundTint="@color/white"
            android:gravity="center_horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="15dp"
            android:text="Delhi Technological University"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/university_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rectangle_round_boarder"
            android:backgroundTint="@color/white"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:text="Delhi , India"
            android:textColor="#546e7a"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rectangle_round_boarder"
            android:backgroundTint="@color/white"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:text="http://www.dtu.ac.in/"
            android:textColor=" #7bc9c2"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>